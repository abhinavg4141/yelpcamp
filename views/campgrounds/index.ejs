<% include ../partials/header %>
<div class="container">
<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
		<p>View our handpicked Camp Grounds</p>
		<a href="/campGrounds/new" class="btn btn-lg btn-primary">Add New CampGrounds</a>
	</div>
</header>
<div class="row text-center">
	<% campGrounds.forEach(function(camp){ %>
	<div class="col-md-6 col-lg-3">
		<div class="thumbnail">
			<img src="<%=camp.image%>">
			<div class="caption">
				<h4><%=camp.name%></h4>
			</div>
			<p>
				<a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
			</p>
		</div>
	</div>
	<% }); %>

</div>
</div>



<% include ../partials/footer %>